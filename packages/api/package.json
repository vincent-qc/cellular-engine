{
  "name": "@cellular/core",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "test": "tsx src/test.ts"
  },
  "dependencies": {
    "@google/gemini-cli-core": "workspace:*",
    "@types/node": "^24.0.7",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.23",
    "cors": "^2.8.5",
    "nodemon": "^3.0.0",
    "routing-controllers": "^0.11.2",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "tsx src/server.ts"
  }
}
